<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>action</servlet-name>
        <servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
        <init-param>
            <param-name>config</param-name>
            <param-value>/WEB-INF/struts-config.xml</param-value>
        </init-param>
        <init-param>
            <param-name>debug</param-name>
            <param-value>2</param-value>
        </init-param>
        <init-param>
            <param-name>detail</param-name>
            <param-value>2</param-value>
        </init-param>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>SocketMonitoring</servlet-name>
        <servlet-class>com.boserverpos.servlet.SocketMonitoring</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SocketManagement</servlet-name>
        <servlet-class>com.boserverpos.servlet.SocketManagement</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DataSourceLookup</servlet-name>
        <servlet-class>com.boserverpos.servlet.DataSourceLookup</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>InitConfiguration</servlet-name>
        <servlet-class>com.boserverpos.servlet.InitConfiguration</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>BackendProcess</servlet-name>
        <servlet-class>com.boserverpos.servlet.BackendProcess</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BackendProcess1</servlet-name>
        <servlet-class>com.boserverpos.servlet.BackendProcess1</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>uss</servlet-name>
        <servlet-class>com.boserverpos.servlet.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>rpts</servlet-name>
        <servlet-class>com.boserverpos.servlet.ReportServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cos</servlet-name>
        <servlet-class>com.boserverpos.servlet.ConnServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>action</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DataSourceLookup</servlet-name>
        <url-pattern>/DataSourceLookup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InitConfiguration</servlet-name>
        <url-pattern>/InitConfiguration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BackendProcess</servlet-name>
        <url-pattern>/BackendProcess</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BackendProcess1</servlet-name>
        <url-pattern>/BackendProcess1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>uss</servlet-name>
        <url-pattern>/uss</url-pattern>
    </servlet-mapping>    
    <servlet-mapping>
        <servlet-name>rpts</servlet-name>
        <url-pattern>/rpts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cos</servlet-name>
        <url-pattern>/cos</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <!--==============================jsp=================================-->
    <servlet>
        <servlet-name>usr</servlet-name>
        <jsp-file>/user.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>usr</servlet-name>
        <url-pattern>/usr</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>con</servlet-name>
        <jsp-file>/connection.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>con</servlet-name>
        <url-pattern>/con</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>rpt</servlet-name>
        <jsp-file>/report.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>rpt</servlet-name>
        <url-pattern>/rpt</url-pattern>
    </servlet-mapping>
    <!--=============================servlet==============================-->
</web-app>
